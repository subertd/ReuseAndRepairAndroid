<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.oregonstate.reuseandrepair" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoriesActivity"
            android:label="@string/title_activity_categories"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.oregonstate.reuseandrepair.MainActivity" />
        </activity>
        <activity
            android:name=".ItemsActivity"
            android:label="@string/title_activity_items"
            android:parentActivityName=".CategoriesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.oregonstate.reuseandrepair.CategoriesActivity" />
        </activity>
        <activity
            android:name=".OrganizationsActivity"
            android:label="@string/title_activity_organizations"
            android:parentActivityName=".ItemsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.oregonstate.reuseandrepair.ItemsActivity" />
        </activity>
        <activity
            android:name=".ItemListingActivity"
            android:label="ItemListingActivity" >
        </activity>
        <activity
            android:name=".OrgListingActivity"
            android:label="@string/title_activity_org_listing" >
        </activity>
        <activity
            android:name=".CategoriesRepairActivity"
            android:label="@string/title_activity_categories_repair" >
        </activity>
        <activity
            android:name=".ItemRepairListingActivity"
            android:label="@string/title_activity_item_repair_listing" >
        </activity>
        <activity
            android:name=".OrgRepairListingActivity"
            android:label="@string/title_activity_org_repair_listing" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
    </application>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

</manifest>
